  "src": "./public",
  "test": "./test",
  "dist": "./dist",
  "mainInput": "main",
  "mainOutput": "main",
  "main": "index.desktop.html",
  "buildDir": "build/*",
  "awsS3url": "s3://chatclient",
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "build": "grunt build",
    "deploy": "gh-pages -d dist",
    "travis": "npm run build && npm run react-native:ios && npm run react-native:android && npm test",
    "react-native:ios": "react-native bundle --entry-file src/index.mobile.js --bundle-output ios/main.jsbundle --platform ios --dev false",
    "react-native:android": "react-native bundle --entry-file src/index.mobile.js --bundle-output android/app/src/main/index.android.bundle --platform android --dev false",
    "serve-nw": "grunt serve-nw",
    "serve-electron": "grunt serve-electron",
    "serve-web": "grunt serve-web",
    "serve-web:dist": "grunt serve-web:dist",
    "test": "jest",
    "postinstall": "npm install fbjs@0.6.0",
    "build-and-deploy": "npm run build && s3cmd sync $npm_package_buildDir $npm_package_awsS3url && echo 'Built and deployed to S3! ðŸš€'"
  },
  "keywords": [
    "react",
    "react-native",
    "nw",
    "flux",
    "babel"
  ],
  "window": {
    "toolbar": true,
    "min_width": 300,
    "min_height": 475
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "testFileExtensions": [
      "js"
    ],
    "testPathDirs": [
      "src"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "verbose": true,
    "collectCoverage": true
  },
