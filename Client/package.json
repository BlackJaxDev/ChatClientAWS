{
  "name": "ChatClientAWS",
  "description": "A cross-platform chat client written with Node.js, React, and Electron.",
  "version": "0.0.1",
  "private": true,
  "author": "David Eddy <blackjax0@gmail.com> (http://github.com/BlackJax96)",
  "license": "GNU GPL v3",
  "repository": {
    "type": "git",
    "url": "https://github.com/BlackJax96/ChatClientAWS"
